{
    "manifest_version": 3,
    "name": "Video Speed Controller",
    "version": "1.0",
    "description": "Controla a velocidade de qualquer vídeo em qualquer página.",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "500": "icons/icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "500": "icons/icon.png"
    }
  }
  